/*
 * -------------------------------------------------
 *  Nextflow config file
 * -------------------------------------------------
 * Default config options for all environments.
 */

manifest {
  name = 'scCut&Tag-inDrop'
  description = 'Nextflow pipeline for scCut&Tag inDrop data analysis'
  homePage = 'https://gitlab.curie.fr/sc-platform/scepigenome/-/tree/scCutTag-inDrop'
  author = 'P. Prompsy, Bioinformatics core facility'
  version = '1.0.0'
  mainScript = 'main.nf'
  nextflowVersion = '>=19.10.0'
}


/**********
 * Params *
 **********/

params {
  email = false
  help = false
  name = false
  samplePlan = false
  design = false

  // Analysis parameters
  protocol = 'sccut_indrop' // others are scchip, sccut_10X or sccut_cellenone
  genome = false
  singleEnd = false
  reads = null
  readPaths = null
  multiqcConfig = "$projectDir/assets/multiqcConfig.yaml"
  metadata = "$projectDir/assets/metadata.tsv"

  skipMultiQC = false
  skipSoftVersions = false

  // Output directories
  outDir = "$launchDir/results"
  summaryDir = "${params.outDir}/summary"

  removeBlackRegions = true
  minCounts = 100
  //bin sizes
  binSize = '50000,250'
  tssWindow = 5000

  barcodes {
    'indexB' {
      bwt2 = "${params.genomeAnnotationPath}/tools/scRNA_LBC_bowtie2_indexes/ref_index_1"
      start_nodarkcycles = 6
      size = 16
    }
    'indexC' {
      bwt2 = "${params.genomeAnnotationPath}/tools/scRNA_LBC_bowtie2_indexes/ref_index_2"
      start_nodarkcycles = 26
      size = 16
    }
    'indexD' {  
      bwt2 = "${params.genomeAnnotationPath}/tools/scRNA_LBC_bowtie2_indexes/ref_index_3"
      start_nodarkcycles  = 46
      size = 16
    }
  }
}

/************************
 * Configs and profiles *
 ************************/

// Additional configs
includeConfig 'conf/base.config'
includeConfig 'conf/process.config'
includeConfig 'conf/geniac.config'

// Profiles
profiles {
  conda {
    includeConfig 'conf/conda.config'
  }
  multiconda {
    includeConfig 'conf/multiconda.config'
  }
  docker {
    includeConfig 'conf/docker.config'
  }
  singularity {
    includeConfig 'conf/singularity.config'
  }
  path {
    includeConfig 'conf/path.config'
  }
  multipath {
    includeConfig 'conf/multipath.config'
  }
  podman {
    includeConfig 'conf/podman.config'
  }
  cluster {
    includeConfig 'conf/cluster.config'
  }
  test{
    includeConfig 'conf/test.config'
  }
}

// Annotation paths
includeConfig 'conf/genomes.config'

// Load modules
includeConfig 'conf/modules.config'
